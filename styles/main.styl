@import 'fonts.styl'
$mine-shaft = #333
$header-height = 8%

html, body 
  font-family Helvetica
  color $mine-shaft

body
  .app-header 
    width 100%
    height $header-height
    font-family GalanoBold
    border-bottom 1px solid $mine-shaft
    display flex
    justify-content flex-end
    align-items center

    &-nav
      &__item
        cursor pointer
        padding 10px
        margin-right 30px
        text-decoration none
        transition color .5s
        &:hover
          color blue

  .app-loginform
    width 30vw
    height 400px
    margin 50px auto
    padding 30px 30px
    border 1px solid $mine-shaft
    border-radius 10px
    input
      width 100%
      height 20px
      margin 10px 0 20px 0
      display block
      border-bottom 1px solid $mine-shaft
    button 
      border 1px solid $mine-shaft
      margin-top 30px
      padding 10px
      cursor pointer


  .app-loader
    display flex
    align-items center
    justify-content center
    height 100%
    width 100%
    position fixed
    background #fefefe
    top 0
    left 0
    z-index 800
    transition opacity 0.5s

    &__element
      width 80%
      height 80%
      display block
      transform translate3d(0, 0, 0)
      text-align center

  .app-unfindable
    position absolute
    top 0
    left 0
    z-index -1
    width 100vw
    height 100vh
    font-size 200px
    display flex
    justify-content center
    align-items center
    flex-direction column
    
    &__indication
      font-size 30px

  .app-about
    width 70vw
    margin 20vh auto

    &-title
      margin 0 auto
      font-family GalanoBold
      font-size 55px
      width 500px
      text-align center

    &-description
      display flex
      justify-content space-around
      margin-top 60px

      &__graph
        width 30vw