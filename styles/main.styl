// Import
@import 'fonts.styl'

// Variables
$mine-shaft = #333
$header-height = 60px
$gold = #ffd000

$h1-size = 55px;
$h2-size = 45px;
$h3-size = 37px;
$h4-size = 30px;

html, body 
  overflow hidden
  font-family Helvetica
  color $mine-shaft
  background-size cover

body
  .app-header 
    width 100%
    height $header-height
    font-family GalanoBold
    border-bottom 1px solid $mine-shaft
    display flex
    background $mine-shaft
    color #fefefe
    justify-content flex-end
    align-items center

    &-nav
      &__item
        cursor pointer
        padding 10px
        margin-right 30px
        text-decoration none
        transition color .3s
        &:hover
          color $gold

  .app-loginform
    height 480px
  .app-logerror
    color red
    font-weight bold
    text-align center
    margin-bottom 20px
  .app-subform
    height 570px
  .app-loginform, .app-subform
    width 400px
    margin 50px auto
    padding 50px 70px
    border 2px solid $mine-shaft
    border-radius 10px
    color $mine-shaft
    // background rgba(200, 200, 200, .9)
    &-title
      font-family GalanoBold
      font-size 25px
      text-align center
      margin-bottom 50px
      border-bottom 1px solid $mine-shaft
      padding-bottom 25px
    label
      font-size 10px
    input
      width 100%
      height 40px
      margin 10px 0 20px 0
      display block
      border 1px solid $mine-shaft
      border-radius 2px
      padding-left 5px
    &-button
      width 80px
      font-size 12px
      border 1px solid $mine-shaft
      border-radius 3px
      display flex
      margin 30px 90px 0 90px //To fix
      text-align center
      cursor pointer
      padding 10px 10px
      transition transform .2s
      will-change transform
      &:hover
        transform translateY(-2px)
        box-shadow 0 2px 1px rgba(200, 200, 200, .7)
    &-register
      margin-top 50px
      font-size 15px


  .app-loader
    display flex
    align-items center
    justify-content center
    height 100%
    width 100%
    position fixed
    background #fefefe
    top 0
    left 0
    z-index 800
    transition opacity 0.5s
    will-change opacity

    &__element
      width 80%
      height 80%
      display block
      transform translate3d(0, 0, 0)
      text-align center

  .app-unfindable
    position absolute
    top 0
    left 0
    z-index -1
    width 100vw
    height 100vh
    font-size 200px
    display flex
    justify-content center
    align-items center
    flex-direction column
    
    &__indication
      font-size 30px

  .app-about
    width 500px
    margin 10vh 0 0 10vw

    &-title
      font-family GalanoBold
      font-size $h1-size
      width 500px
      text-shadow 0 1px 1px rgba(200, 200, 200, 0.5)

      &__colored
          color $gold

    &-description
      margin-top 60px
      line-height 25px
      font-size 13px

      &__graph
        margin-top 40px
  
    &-image
      height 100vh
      width auto
      z-index -1
      box-shadow -1px 0 1px rgba(150, 150, 150, .2)
      position absolute
      top 0
      right 0

    &-register
      margin-top 60px
      font-size 18px
      display flex
      justify-content flex-end
      text-decoration none
      color $gold
      font-weight bold
      &:hover .app-about-register__arrow
        transform translateX(7px)
      &__arrow
        transition transform .3s
        will-change transform
        margin-left 8px
